<div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label 'Dieatary Requirements', :class => 'control-label' %>
  <div class="controls">
    <%= f.text_area :dietary_req, :class => 'text_area', :rows => 2 %>
  </div>
</div>
<div class="control-group">
  <%= f.label 'Ticket Type', :class => 'control-label' %>
  <div class="controls">
    <%= f.select :price_id, Price.all.map {|x| [x.name, x.id]} %>
  </div>
</div>
